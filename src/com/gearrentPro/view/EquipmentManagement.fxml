<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="600" prefWidth="868.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="com.gearrentPro.controller.EquipmentController">
     <children>

        <!-- =================== TITLE =================== -->
        <Label layoutX="346.0" layoutY="14.0" style="-fx-font-size: 22; -fx-font-weight: bold;" text="Equipment Management" />

        <!-- =================== SEARCH & FILTER =================== -->
        <HBox layoutX="51.0" layoutY="71.0" spacing="10">
            <TextField fx:id="txtSearch" prefWidth="200" promptText="Search by brand or model" />

            <ComboBox fx:id="cmbCategory" prefWidth="150" promptText="Category" />

            <ComboBox fx:id="cmbStatus" prefWidth="180" promptText="Status" />

            <Button onAction="#search" text="Search" />
            <Button onAction="#clear" text="Clear" />
        </HBox>

        <!-- =================== TABLE =================== -->
        <TableView fx:id="tblEquipment" layoutX="51.0" layoutY="121.0" prefHeight="450" prefWidth="600">

            <columns>
                <TableColumn fx:id="colBrand" prefWidth="150" text="Brand" />
                <TableColumn fx:id="colModel" prefWidth="150" text="Model" />
                <TableColumn fx:id="colStatus" prefWidth="200" text="Status" />
            </columns>
        </TableView>

        <!-- =================== FORM =================== -->
        <VBox layoutX="681.0" layoutY="121.0" spacing="10">

            <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Equipment Details" />

            <TextField fx:id="txtBrand" promptText="Brand" />
            <TextField fx:id="txtModel" promptText="Model" />
            <TextField fx:id="txtYear" promptText="Purchase Year" />
            <TextField fx:id="txtPrice" promptText="Base Daily Price" />
            <TextField fx:id="txtDeposit" promptText="Security Deposit" />

            <ComboBox fx:id="cmbCategory" promptText="Select Category" />
            
            <ComboBox fx:id="cmbStatus" promptText="Select Status" />

            <!-- =================== BUTTONS =================== -->
            <HBox spacing="10">
                <Button fx:id="btnSave" onAction="#save" text="Save" />
                <Button fx:id="btnUpdate" onAction="#update" text="Update" />
                <Button fx:id="btnDelete" onAction="#delete" text="Delete" />
            </HBox>

        </VBox>

    </children>
</AnchorPane>
